@model PsyConnect.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<style>
    :root {
        --pc-primary: #4f46e5;
        --pc-primary-700: #4338ca;
        --pc-text: #0f172a;
        --pc-muted: #64748b;
        --pc-border: rgba(15,23,42,.12);
        --pc-card: rgba(255,255,255,.98);
        --pc-shadow: 0 18px 50px rgba(15,23,42,.12);
        --pc-radius: 18px;
    }

    .pc-card {
        background: var(--pc-card);
        border: 1px solid var(--pc-border);
        border-radius: 22px;
        box-shadow: var(--pc-shadow);
        overflow: hidden;
    }

    .pc-card-header {
        padding: 1rem 1.1rem;
        border-bottom: 1px solid var(--pc-border);
        background: radial-gradient(900px 240px at 10% 0%, rgba(79,70,229,.12), transparent 60%), radial-gradient(800px 220px at 90% 0%, rgba(34,197,94,.10), transparent 55%), rgba(255,255,255,.92);
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: .75rem;
        flex-wrap: wrap;
    }

    .pc-h {
        margin: 0;
        font-weight: 950;
        color: var(--pc-text);
    }

    .pc-sub {
        margin: .2rem 0 0;
        color: var(--pc-muted);
        font-weight: 650;
        font-size: .92rem;
    }

    .pc-badge {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        padding: .3rem .7rem;
        border-radius: 999px;
        border: 1px solid rgba(79,70,229,.18);
        background: rgba(79,70,229,.06);
        color: rgba(79,70,229,.95);
        font-weight: 900;
        font-size: .8rem;
        white-space: nowrap;
    }

    .form-control, .form-select {
        border-radius: 14px !important;
        border-color: rgba(15,23,42,.14) !important;
        padding: .9rem .9rem !important;
    }

        .form-control:focus, .form-select:focus {
            border-color: rgba(79,70,229,.65) !important;
            box-shadow: 0 0 0 .25rem rgba(79,70,229,.15) !important;
        }

    .pc-timeslots .timeslot {
        border-radius: 999px !important;
        font-weight: 850 !important;
        padding: .45rem .8rem !important;
    }

    .pc-btn {
        border-radius: 999px !important;
        font-weight: 900 !important;
        padding: .6rem 1rem !important;
    }

    .pc-btn-primary {
        background: var(--pc-primary) !important;
        border-color: var(--pc-primary) !important;
    }

        .pc-btn-primary:hover {
            background: var(--pc-primary-700) !important;
            border-color: var(--pc-primary-700) !important;
        }
</style>

<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">
        <div class="pc-card">
            <div class="pc-card-header">
                <div>
                    <h1 class="h5 pc-h">Create booking</h1>
                    <div class="pc-sub">Choose a session type, date, and time — then continue to payment.</div>
                </div>
                <span class="pc-badge">
                    <i class="bi bi-credit-card"></i>
                    Payment via Stripe
                </span>
            </div>

            <div class="card-body p-4">
                <form asp-controller="Payments" asp-action="Start" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold"></label>
                        <input asp-for="Title" class="form-control" placeholder="e.g., Anxiety support session" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <input asp-for="Description" class="form-control" placeholder="A short note for your therapist (optional)" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label fw-bold"></label>
                        <select asp-for="Type" class="form-select">
                            <option value="Onsite">Onsite</option>
                            <option value="Online">Online</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <!-- DATE PICKER -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <input id="BookingDate"
                               name="BookingDate"
                               class="form-control"
                               type="date"
                               min="@DateTime.Today.ToString("yyyy-MM-dd")"
                               required />
                    </div>

                    <!-- TIME SLOTS -->
                    <div class="mb-3 pc-timeslots">
                        <label class="form-label fw-bold">Time</label>
                        <div id="timeSlots" class="d-flex flex-wrap gap-2">
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="09:00">9:00 am</button>
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="10:00">10:00 am</button>
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="11:00">11:00 am</button>
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="12:00">12:00 pm</button>
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="14:00">2:00 pm</button>
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="15:00">3:00 pm</button>
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="16:00">4:00 pm</button>
                            <button type="button" class="btn btn-outline-primary timeslot" data-time="17:00">5:00 pm</button>
                        </div>
                        <div class="small text-muted mt-2">
                            Tip: Choose a time slot. You’ll confirm payment on the next step.
                        </div>
                    </div>

                    <!-- Hidden field for SELECTED TIME ONLY -->
                    <input type="hidden" id="SelectedTime" name="SelectedTime" />

                    <!-- Validation message for final combined dateTime -->
                    <div class="mb-3">
                        <span asp-validation-for="dateTime" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary pc-btn">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                        <button type="submit" class="btn pc-btn pc-btn-primary text-white">
                            Continue <i class="bi bi-arrow-right ms-1"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.querySelector("form");
            const dateInput = document.getElementById("BookingDate");
            const selectedTimeInput = document.getElementById("SelectedTime");
            const errorSpan = document.querySelector('[data-valmsg-for="dateTime"]');

            // Handle timeslot button click
            document.querySelectorAll(".timeslot").forEach(btn => {
                btn.addEventListener("click", function () {
                    document.querySelectorAll(".timeslot").forEach(b => {
                        b.classList.remove("btn-primary", "text-white");
                        b.classList.add("btn-outline-primary");
                    });

                    this.classList.remove("btn-outline-primary");
                    this.classList.add("btn-primary", "text-white");

                    selectedTimeInput.value = this.getAttribute("data-time");
                    if (errorSpan) errorSpan.textContent = "";
                });
            });

            form.addEventListener("submit", function (e) {
                if (!dateInput.value || !selectedTimeInput.value) {
                    e.preventDefault();
                    if (errorSpan) errorSpan.textContent = "Please select a date and a time slot.";
                }
            });
        });
    </script>
}
