@model IEnumerable<PsyConnect.Models.Booking>
@using System.Text.Json

@{
    ViewData["Title"] = "Admin Dashboard";

    string[] weeklyLabels = ViewBag.WeeklyLabels ?? Array.Empty<string>();
    int[] weeklyValues = ViewBag.WeeklyValues ?? Array.Empty<int>();

    int onsite = ViewBag.OnsiteCount ?? 0;
    int online = ViewBag.OnlineCount ?? 0;
}

<h2>Admin Dashboard</h2>

<!-- Summary cards -->
<div class="row mt-3">
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <div>Total Bookings</div>
                <h3>@ViewBag.TotalBookings</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <div>Today</div>
                <h3>@ViewBag.TodayBookings</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <div>Next 7 Days</div>
                <h3>@ViewBag.Next7DaysBookings</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <div>Pending</div>
                <h3>@ViewBag.PendingCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <div>In Progress</div>
                <h3>@ViewBag.InProgressCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <div>Completed</div>
                <h3>@ViewBag.CompletedCount</h3>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row mt-3">
    <div class="col-md-8">
        <h4>Bookings – next 7 days</h4>
        <canvas id="weeklyChart"></canvas>
    </div>
    <div class="col-md-4">
        <h4>Onsite vs Online</h4>
        <canvas id="typeChart"></canvas>
    </div>
</div>

<hr />

<div class="row mt-3">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h4>Calendar</h4>
            <div>
                <label>Status filter:</label>
                <select id="adminStatusFilter" class="form-select form-select-sm" style="width:auto;display:inline-block;">
                    <option value="All">All</option>
                    <option value="Pending">Pending</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>
        </div>
        <div id="adminCalendar"></div>
    </div>

    <div class="col-md-4">
        <h4>Upcoming sessions</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Patient</th>
                    <th>Type</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.dateTime.ToString("ddd dd MMM yyyy HH:mm")</td>
                        <td>@b.User?.Email</td>
                        <td>@b.Type</td>
                        <td>@b.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- FullCalendar -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.14/main.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.14/index.global.min.js"></script>

    <script>
        // ====== Charts ======
        const weeklyLabels = @Html.Raw(JsonSerializer.Serialize(weeklyLabels));
        const weeklyValues = @Html.Raw(JsonSerializer.Serialize(weeklyValues));

        const ctxWeekly = document.getElementById('weeklyChart');
        new Chart(ctxWeekly, {
            type: 'bar',
            data: {
                labels: weeklyLabels,
                datasets: [{
                    label: 'Bookings',
                    data: weeklyValues
                }]
            }
        });

        const ctxType = document.getElementById('typeChart');
        new Chart(ctxType, {
            type: 'doughnut',
            data: {
                labels: ['Onsite', 'Online'],
                datasets: [{
                    data: [@onsite, @online]
                }]
            }
        });

        // ====== FullCalendar for Admin ======
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('adminCalendar');
            var statusSelect = document.getElementById('adminStatusFilter');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                height: 650,
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
                },
                events: function (info, successCallback, failureCallback) {
                    var status = statusSelect.value;
                    var url = '/Bookings/AdminEvents?status=' + encodeURIComponent(status);
                    fetch(url)
                        .then(response => response.json())
                        .then(data => successCallback(data))
                        .catch(err => failureCallback(err));
                },
                eventClick: function (info) {
                    alert(
                        info.event.title +
                        '\n' +
                        'Status: ' + info.event.extendedProps.status +
                        '\n' +
                        'Type: ' + info.event.extendedProps.type +
                        '\n' +
                        'Session #: ' + info.event.extendedProps.number
                    );
                }
            });

            calendar.render();

            statusSelect.addEventListener('change', function () {
                calendar.refetchEvents();
            });
        });
    </script>
}
