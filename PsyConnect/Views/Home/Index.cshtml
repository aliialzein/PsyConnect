@{
    ViewData["Title"] = "Welcome";
}

<section class="bg-primary text-white text-center py-5 rounded shadow">
    <h1 class="display-4 fw-bold">Your Mental Health, Connected</h1>
    <p class="lead mt-3">
        Book therapy sessions, meet online, and manage your care — from one place.
    </p>

    @if (!User.Identity.IsAuthenticated)
    {
        <a class="btn btn-light btn-lg me-3 mt-3" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
        <a class="btn btn-outline-light btn-lg mt-3" asp-area="Identity" asp-page="/Account/Register">
            Register
        </a>
    }
    else
    {
        <a class="btn btn-light btn-lg mt-4" asp-controller="Home" asp-action="Index">
            Go to Dashboard
        </a>
    }
</section>

<div class="row text-center mt-5">
    <div class="col-md-4">
        <i class="bi bi-camera-video fs-1 text-primary"></i>
        <h4 class="mt-2">Online Sessions</h4>
        <p>Join secure Zoom meetings automatically.</p>
    </div>
    <div class="col-md-4">
        <i class="bi bi-calendar-event fs-1 text-primary"></i>
        <h4 class="mt-2">Easy Scheduling</h4>
        <p>Book and manage appointments easily.</p>
    </div>
    <div class="col-md-4">
        <i class="bi bi-credit-card fs-1 text-primary"></i>
        <h4 class="mt-2">Secure Payment</h4>
        <p>Stripe-powered checkout.</p>
    </div>
</div>
