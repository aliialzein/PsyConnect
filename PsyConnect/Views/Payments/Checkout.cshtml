@model PsyConnect.Models.Payment

@{
    ViewData["Title"] = "Payment Checkout";
}

<h2>Payment Checkout</h2>

<div class="card p-3">
    <h4>Session Summary</h4>
    <p><strong>Title:</strong> @Model.BookingTitle</p>
    <p><strong>Type:</strong> @Model.BookingType</p>
    <p><strong>Date &amp; Time:</strong> @Model.BookingDateTime</p>
    <p><strong>Amount:</strong> @Model.Amount.ToString("0.00") $</p>
</div>

<hr />

<h4>Dummy Payment Gateway</h4>
<p>This is a simulated payment page for the project (no real money).</p>

<form asp-action="DummyConfirm" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <!-- Fake card inputs just for UI -->
    <div class="form-group">
        <label>Card Number</label>
        <input class="form-control" placeholder="0000 0000 0000 0000" />
    </div>
    <div class="form-group">
        <label>Expiry</label>
        <input class="form-control" placeholder="MM/YY" />
    </div>
    <div class="form-group">
        <label>CVC</label>
        <input class="form-control" placeholder="123" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Pay Now</button>
</form>

<div class="mt-3">
    <a asp-controller="Bookings" asp-action="Create" class="btn btn-link">Cancel and go back</a>
</div>
