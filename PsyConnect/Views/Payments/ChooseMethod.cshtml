@model PsyConnect.Models.Payment

@{
    ViewData["Title"] = "Choose Payment Method";
}

<h2>Choose Payment Method</h2>

<div class="card p-3 mb-3">
    <h4>Session Summary</h4>
    <p><strong>Title:</strong> @Model.BookingTitle</p>
    <p><strong>Type:</strong> @Model.BookingType</p>
    <p><strong>Date &amp; Time:</strong> @Model.BookingDateTime</p>
    <p><strong>Amount:</strong> @Model.Amount.ToString("0.00") $</p>
</div>

<div class="d-flex gap-3">
    <form asp-action="StripeCheckout" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Pay with Card (Stripe)</button>
    </form>

    <form asp-action="DummyCheckout" method="get">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-secondary">Pay with Dummy Method</button>
    </form>
</div>

<div class="mt-3">
    <a asp-controller="Bookings" asp-action="Create" class="btn btn-link">Cancel and go back</a>
</div>
